# Application Configuration
APP_ORIGIN=https://your-domain.com  # Required: Base URL for your application (e.g., https://myhome-docs.com)

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/myhome

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# Storage Configuration
STORAGE_TYPE=local  # Options: local, gcs, google
UPLOAD_PATH=./uploads  # For local storage only

# Google Cloud Storage Configuration (when STORAGE_TYPE=gcs)
GCS_BUCKET_NAME=media.myhome-tech.com
GCS_PROJECT_ID=your-gcp-project-id
GCS_KEY_FILENAME=path/to/service-account-key.json
# Alternative: GCS_CREDENTIALS={"type":"service_account","project_id":"..."}

# Encryption Configuration
DOCUMENT_MASTER_KEY=your-256-bit-encryption-master-key

# API Keys
OPENAI_API_KEY=your-openai-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# Canny Feedback Widget Configuration
VITE_CANNY_BOARD_TOKEN=your_canny_board_token_here
VITE_CANNY_APP_ID=your_canny_app_id_here
VITE_CANNY_USE_JWT=false

# Canny JWT SSO Configuration (optional for enhanced security)
CANNY_JWT_SECRET=your_canny_jwt_secret_key_here

# Mistral/LLM Configuration (TICKET 1)
MISTRAL_API_KEY=your-together-api-key-or-mistral-api-key
MISTRAL_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.1
MISTRAL_BASE_URL=https://api.together.xyz/v1

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Error Monitoring
SENTRY_DSN=your-sentry-dsn

# Google OAuth (Legacy)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Development/Legacy
REPL_ID=your-replit-id
ISSUER_URL=your-oidc-issuer-url

# Backup System Configuration (BLOCKER-102)
BACKUP_BUCKET_NAME=myhome-backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
STORAGE_BACKUP_RETENTION_DAYS=30
BACKUP_TIMEZONE=UTC
BACKUP_CROSS_REGION=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
BACKUP_ALERT_EMAILS=admin@yourdomain.com

# Mailgun Email-to-Document Configuration (TICKETS 1-2)
MAILGUN_API_KEY=your-mailgun-api-key-here
# Optional: Alternative environment variable name  
MAILGUN_SIGNING_KEY=your-mailgun-signing-key-here

# CloudConvert Configuration
CLOUDCONVERT_API_KEY=your_api_key_here
CLOUDCONVERT_SANDBOX=false
CLOUDCONVERT_REGION=auto
CLOUDCONVERT_TIMEOUT_MS=30000
PDF_CONVERTER_ENGINE=puppeteer