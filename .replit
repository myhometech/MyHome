modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run build && NODE_ENV=production node dist/index.js"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "node start-production-simple.js"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[workflows]
runButton = "Production Server (Fixed)"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Start application with GC"
author = 45314489
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development node --expose-gc --import tsx/esm server/index.ts"

[[workflows.workflow]]
name = "Production Deploy"
author = 45314489
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node --expose-gc dist/index.js"

[[workflows.workflow]]
name = "Start Production Server"
author = 45314489
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*dist/index.js\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node --expose-gc dist/index.js"

[[workflows.workflow]]
name = "Production Server (Fixed)"
author = 45314489
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"vite\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"tsx\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*dist\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node --expose-gc dist/index.js"

[agent]
integrations = ["javascript_google_analytics==1.0.0", "javascript_sendgrid==1.0.0", "javascript_database==1.0.0", "javascript_anthropic==1.0.0", "javascript_stripe==1.0.0", "javascript_gemini==1.0.0", "javascript_object_storage==1.0.0", "javascript_openai==1.0.0"]
