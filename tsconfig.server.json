{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist/server",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "types": ["node"],
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": [
    "client/**/*",
    "vite.config.ts",
    "server/vite.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules/**/*",
    "dist/**/*"
  ]
}